<body id="top">

    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
               

               

                <div style="justify-content:space-between;" class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link click-scroll" asp-area="" asp-controller="Home" asp-action="Index"
                               style="font-family: 'Tajawal', sans-serif;font-size:20px;">الرئيسية</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link click-scroll" asp-area="" asp-controller="admin" asp-action="Index"
                                   style="font-family: 'Tajawal', sans-serif;font-size:20px;">لوحة التحكم</a>
                            </li>
                        }
                    </ul>
                    <a class="navbar-brand" href="/">
                        <img b-zj2taeaka9="" src="/img/logo.png" width="60" height="60" alt="Logo Image" class="img-fluid">

                    </a>
                    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                        <span class="nav-link">@User.Identity.Name</span>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                               @* <li><a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword">Change Password</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Activity">Activity Log</a></li>
                                <li><hr class="dropdown-divider" /></li>*@

                                <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout</a></li>

                            </ul>
                        </li>
                    </ul>
                   @* <div class="d-none d-lg-block">
                      
                           
                        <a asp-area="" asp-controller="Home" asp-action="Login" class="navbar-icon bi-person smoothscroll"></a>
                    </div>*@
                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer section-padding">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-12 mb-4 pb-2">
                    <a class="navbar-brand mb-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <span style="font-family: 'Tajawal', sans-serif;">بنك الأسئلة</span>
                    </a>
                </div>

                <div class="col-lg-3 col-md-4 col-6">
                    <h6 class="site-footer-title mb-3">Resources</h6>

                    <ul class="site-footer-links">
                        <li class="site-footer-link-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="site-footer-link">Home</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a asp-area="" asp-controller="Home" asp-action="Questions" class="site-footer-link">Questions</a>
                        </li>

                        <li class="site-footer-link-item">
                            <a  asp-area="" asp-controller="Home" asp-action="Privacy" class="site-footer-link">Privacy</a>
                        </li>

                       

                      
                    </ul>
                </div>

              

                <div class="col-lg-3 col-md-4 col-12 mt-4 mt-lg-0 ms-auto">
                   

                    <p class="copyright-text mt-lg-5 mt-4">
                        Copyright © 2048  All rights reserved.
                       </p>

                </div>

            </div>
        </div>
    </footer>

    <!-- JAVASCRIPT FILES -->
