                                        <textarea class="form-control" id="exampleTextarea" rows="4" placeholder="الأسئلة" name="text"></textarea>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="url">
                                                <i class="fas fa-comment"></i>

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                         
