@model QuestionVM
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<section class="section-padding">
    <div class="container">
        <div class="row">

          

            <div class="col-lg-8 col-12 mt-3 mx-auto">
                <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
                    <div class="d-flex">
                        <img src="~/WebsiteStyle/images/topics/QuestionMark.png" class="custom-block-image img-fluid" alt="">

                        <div class="custom-block-topics-listing-info d-flex">
                            <div>
                                <h5 style="color: #5d97b7;
    font-size: 30px !important;" class="mb-2">
                                    السؤال : @Model.Question.Title
                                </h5>

                                <p class="mb-0"> @Model.Question.Answer</p>

                              
                            </div>                         
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-12 text-center">
                    <h3 class="mb-4">مواضيع متعلقة </h3>
                </div>
                <div class="text-blue" style="margin-bottom:-10px; width:40% !important;">
                    @foreach (var q in Model.questions)
                    {
                        <p class="sub">@q.Title</p>
                    }

                </div>
            
        </div>
    </div>
    </div>
</section>



