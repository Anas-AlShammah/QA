@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="AddQuestion" method="Post">
    <fieldset>
       @* <legend>Legend</legend>*@
      
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4">Question</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="Title" placeholder="Enter Question">
@*            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
*@        </div>
        
        
        <div class="form-group">
            <label for="exampleTextarea" class="form-label mt-4">Answer</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" name="Answer"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail" class="form-label mt-4">Key Words</label>
            <input type="text" class="form-control" id="exampleInputEmail" name="KeyWord" placeholder="Key Words">
            @*            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            *@
        </div>
      
       
       
       
       
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>
