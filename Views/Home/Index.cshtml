@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Lateef&display=swap" rel="stylesheet">

<section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-12 mx-auto">
                <h1 class="text-white text-center">اطرح السؤال المطلوب</h1>

              
                <form method="get" action="@Url.Action("Search", "Home")" class="custom-form mt-4 pt-2 mb-lg-0 mb-5" >
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bi-search" id="basic-addon1">

                        </span>
                        <textarea style=" border:none; overflow:hidden; height:50px;" name="str" placeholder="اكتب سؤالك هنا..." class="form-control" id="keyword" aria-label="Search"></textarea>

                       

                        <button type="submit" class="form-control">ارسال</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
